pipeline {
    agent any

    stages {

        stage('Docker version') {
            agent {
                label 'ubuntu'
            }
            steps {
                sh "echo $USER"
                sh 'sudo chmod 777 /var/run/docker.sock'
                sh 'docker version'
            }
        }

        stage('Docker version master') {
            agent {
                label 'master'
            }
            steps {
                sh "echo $USER"
                sh 'docker version'
            }
        }

        stage('Deploy') {
            agent {
                label 'master'
            }
            steps {
                sh 'ansible-playbook ansible/installer_of_docker_and_jdk.yml'
            }
        }
    }
}